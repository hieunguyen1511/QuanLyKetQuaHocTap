                @*<a href="#" class="btn btn-success col-md-2 font-bold">Nhập danh sách</a>*@
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("ThemSinhVien", "QuanLySinhVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Mã sinh viên</label>
                                <div class="col-md">
                                    <input type="text" name="MaSV" id="MaSV" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Họ tên sinh viên</label>
                                <div class="col-md">
                                    <input type="text" name="HoTenSV" id="HoTenSV" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Giới tính:</label>
                                <div class="col-md-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="GioiTinh" id="GioiTinh1" value="true" checked>
                                        <label class="form-check-label" for="GioiTinh1">
                                            Nam
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="GioiTinh" id="GioiTinh2" value="false">
                                        <label class="form-check-label" for="GioiTinh2">
                                            Nữ
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh</label>
                                <div class="col-md">
                                    <input type="date" name="NgaySinh" id="NgaySinh" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <div class="col-md">
                                    <input type="text" name="SDT" id="SDT" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <div class="col-md">
                                    <input type="email" name="Email" id="Email" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Dân tộc</label>
                                <div class="col-md">
                                    <input type="text" name="DanToc" id="DanToc" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Số CCCD</label>
                                <div class="col-md">
                                    <input type="text" name="CCCD" id="CCCD" class="form-control" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-1"></div>
                        <div class="col-5">

                            <div class="form-group">
                                <label>Cấp ngoại ngữ không chuyên</label>
                                <div class="col-md">
                                    <input type="text" name="NNKC" id="NNKC" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kỹ năng xã hội</label>
                                <div class="col-md">
                                    <input type="text" name="KNXH" id="KNXH" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Chuyên ngành</label>
                                <div class="col-md">
                                    @Html.DropDownList("ID_Nganh", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Cố vấn học tập</label>
                                <div class="col-md">
                                    @Html.DropDownList("ID_CoVan", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <input type="submit" value="Thêm sinh viên" class="col-4 btn btn-primary font-bold" />
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
</div>

