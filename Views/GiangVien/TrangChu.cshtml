
@using QuanLyKetQuaHocTap.Models;
@model tb_GiangVien
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/GiangVien/_LayoutGiangVien.cshtml";
}

@{
    if (Model == null)
    {
        Response.Redirect(Url.Action("DangNhap", "DangNhap"));
        return;
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Template_Info/main.css" />
    <div class="container" style="margin-top: 20px">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        @Html.Action("HienThiThongTinCaNhan_Partial", new { id = Model.ID })
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="d-flex align-items-center mb-3">Bảng thống kê</h5>
                                    @{
                                        var per1 = General.getPhanTramSVLoaiGioiDenXuatSacHKHT(Model.ID);
                                        var per2 = General.getPhanTramDGRL_GV(Model.ID, General.XuatSac);
                                        var per3 = General.getPhanTramSVDatHocBongHkHT(Model.ID);
                                        var per1_round = Math.Round(per1);
                                        var per2_round = Math.Round(per2);
                                        var per3_round = Math.Round(per3);
                                    }
                                    <p class="text-dark">Tỉ lệ sinh viên loại giỏi đến xuất sắc học kì hiện tại: @per1%: </p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @per1_round%" aria-valuenow="@per1_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại xuất sắc đánh giá rèn luyện học kì hiện tại: @per2%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per2_round%" aria-valuenow="@per2_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên đạt học bổng học kì hiện tại: @per3%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: @per3_round%" aria-valuenow="@per3_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>

}

