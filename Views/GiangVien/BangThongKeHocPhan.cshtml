@using QuanLyKetQuaHocTap.Models;
@model IEnumerable<tb_HocPhan>
@{
    ViewBag.Title = "Bảng thống kê học phần giảng dạy";
    Layout = "~/Views/GiangVien/_LayoutGiangVien.cshtml";
}

@{
    var gv = ((tb_TaiKhoan)Session["TK"]).tb_GiangVien.First();
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Template_Info/main.css" />
    <div class="container" style="margin-top: 20px">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        @Html.Action("HienThiThongTinCaNhan_Partial", new { id = gv.ID })
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="d-flex align-items-center mb-3">Bảng thống kê trong học kì hiện tại</h5>
                                    @{
                                        var per1 = General.getPhanTramSinhVienXepLoai(gv.ID, General.XuatSac);
                                        var per2 = General.getPhanTramSinhVienXepLoai(gv.ID, General.Gioi);
                                        var per3 = General.getPhanTramSinhVienXepLoai(gv.ID, General.Kha);
                                        var per4 = General.getPhanTramSinhVienXepLoai(gv.ID, General.TB);
                                        var per5 = General.getPhanTramSinhVienXepLoai(gv.ID, General.Yeu);
                                        var per6 = General.getPhanTramSinhVienXepLoai(gv.ID, General.Kem);
                                        var per1_round = Math.Round(per1);
                                        var per2_round = Math.Round(per2);
                                        var per3_round = Math.Round(per3);
                                        var per4_round = Math.Round(per4);
                                        var per5_round = Math.Round(per5);
                                        var per6_round = Math.Round(per6);
                                    }
                                <p class="text-dark">Tỉ lệ sinh viên loại xuất sắc: @per1%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: @per1_round%" aria-valuenow="@per1_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại giỏi: @per2%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per2_round%" aria-valuenow="@per2_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại khá: @per3%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per3_round%" aria-valuenow="@per3_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại trung bình: @per4%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per4_round%" aria-valuenow="@per4_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại yếu: @per5%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per5_round%" aria-valuenow="@per5_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <p class="text-dark">Tỉ lệ sinh viên loại kém: @per6%</p>
                                    <div class="progress mb-3" style="height: 5px">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @per6_round%" aria-valuenow="@per6_round" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
}




