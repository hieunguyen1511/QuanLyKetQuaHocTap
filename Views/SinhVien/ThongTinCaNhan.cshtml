@using QuanLyKetQuaHocTap.Models;
@model tb_SinhVien
@{
    ViewBag.Title = "Thông tin cá nhân của bạn";
    Layout = "~/Views/SinhVien/_LayoutSinhVien.cshtml";
}

@{
    if (Model == null)
    {
        Response.Redirect(Url.Action("DangNhap", "DangNhap"));
        return;
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Template_Info/main.css" />
    <style type="text/css">
    </style>
    <div class="container" style="margin-top: 20px">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        @Html.Action("HienThiThongTinCaNhan_Partial", new { id = Model.ID })
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h4>Cập nhật thông tin cá nhân</h4>
                            <br />
                            <form action="@Url.Action("CapNhatThongTinCaNhan", new { id = Model.ID })" method="post">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="email" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Số điện thoại</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="sdt" value="@Model.SDT">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Ngày sinh</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="date" class="form-control" name="ngaySinh" value="@General.getStrFormatDate(Model.NgaySinh)">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Giới tính</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <select name="gioiTinh" class="form-control">
                                            @{
                                                if (Model.GioiTinh == General.gioiTinhNam)
                                                {
                                                    <option selected value="@General.strGioiTinhNam">
                                                        @General.strGioiTinhNam
                                                    </option>
                                                    <option value="@General.strGioiTinhNu">
                                                        @General.strGioiTinhNu
                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@General.strGioiTinhNam">
                                                        @General.strGioiTinhNam
                                                    </option>
                                                    <option selected value="@General.strGioiTinhNu">
                                                        @General.strGioiTinhNu
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Dân tộc</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="danToc" value="@Model.DanToc">
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">CCCD</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="cccd" value="@Model.CCCD">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="submit" class="btn btn-primary px-4" value="Lưu thay đổi">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript">

    </script>
}