@using QuanLyKetQuaHocTap.Models;
@model tb_SinhVien
@{
    ViewBag.Title = "Thông tin cá nhân của bạn";
    Layout = "~/Views/SinhVien/_LayoutSinhVien.cshtml";
}

@{
    if (Model == null)
    {
        Response.Redirect(Url.Action("DangNhap", "DangNhap"));
        return;
    }
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Template_Info/main.css" />
    <style type="text/css">
    </style>
    <div class="container" style="margin-top: 20px">
        <div class="main-body">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        @Html.Action("HienThiThongTinCaNhan_Partial", new { id = Model.ID })
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <h4>Cập nhật thông tin cá nhân</h4>
                            <br />
                            <form action="@Url.Action("CapNhatThongTinCaNhan", new { id = Model.ID })" method="post">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="email" value="@Model.Email">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Số điện thoại</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" class="form-control" name="sdt" value="@Model.SDT">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Ngày sinh</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="date" class="form-control" name="ngaySinh" value="@General.getStrFormatDate(Model.NgaySinh.GetValueOrDefault())">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Giới tính</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <select name="gioiTinh" class="form-control">
                                            @{
                                                if (Model.GioiTinh == General.gioiTinhNam)
                                                {
                                                    <option selected value="@General.strGioiTinhNam">
                                                        @General.strGioiTinhNam
                                                    </option>
                                                    <option value="@General.strGioiTinhNu">
                                                        @General.strGioiTinhNu
                                                    </option>
                                                }
                                                else
                                                {
                                                    <option value="@General.strGioiTinhNam">
                                                        @General.strGioiTinhNam
                                                    </option>
                                                    <option selected value="@General.strGioiTinhNu">
                                                        @General.strGioiTinhNu
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="submit" class="btn btn-primary px-4" value="Lưu thay đổi">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="d-flex align-items-center mb-3">Project Status</h5>
                                        <p>Web Design</p>
                                        <div class="progress mb-3" style="height: 5px">
                                            <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <p>Website Markup</p>
                                        <div class="progress mb-3" style="height: 5px">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <p>One Page</p>
                                        <div class="progress mb-3" style="height: 5px">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <p>Mobile Template</p>
                                        <div class="progress mb-3" style="height: 5px">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
