@using QuanLyKetQuaHocTap.Models;
@model tb_SinhVien

@{
    if (Model == null)
    {
        Response.Redirect(Url.Action("DangNhap", "DangNhap"));
        return;
    }
    <div class="card-body">
        <div class="d-flex flex-column align-items-center text-center">
            @{
                if (Model.GioiTinh == General.gioiTinhNam)
                {
                    <img src="~/assets/imgs/student_male.jpg" alt="Sinh viên" class="rounded-circle p-1 bg-primary" width="110">
                }
                else
                {
                    <img src="~/assets/imgs/student_female.jpg" alt="Sinh viên" class="rounded-circle p-1 bg-primary" width="110">
                }
            }
        <div class="mt-3">
            <h4>@Model.MaSV - @Model.HoTen</h4>
            <p class="text-muted font-size-sm">Email: @Model.Email</p>
            <p class="text-muted font-size-sm">SĐT: @Model.SDT</p>
            <p class="text-muted font-size-sm">Ngày sinh: @General.getStrFormatDate(Model.NgaySinh)</p>
            <p class="text-muted font-size-sm">Dân tộc: @Model.DanToc</p>
            <p class="text-muted font-size-sm">CCCD: @Model.CCCD</p>
            <p class="text-muted font-size-sm">Ngành @Model.tb_Nganh.TenNganh (@Model.tb_Nganh.MaNganh)</p>
            <p class="text-muted font-size-sm">@Model.tb_Nganh.tb_KhoaVien.TenKV</p>
        </div>
        </div>
    </div>
}

