@using QuanLyKetQuaHocTap.Models;
@model tb_HocPhan
@{
    ViewBag.Title = "XemHocPhan";
    Layout = "~/Views/SinhVien/_LayoutSinhVien.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .title {
        background-color: cadetblue;
        padding-left: 30px;
        color: white;
        font-weight: 800;
    }

    .success {
        color: deepskyblue;
        text-align: center;
        font-weight: 500;
    }

    .fail {
        color: red;
        text-align: center;
        font-weight: 500;
    }

    .foot {
        text-align: left;
    }

    .foot-text {
        font-weight: 400;
        color: darkolivegreen;
    }

    th {
        min-width: 110px;
        text-align: center;
        user-select: none;
        background-color: darkslateblue;
        color: white;
    }

    .long {
        min-width: 500px;
    }

    table {
    }

    .stt {
        text-align: center;
    }

    .number {
        text-align: center;
    }
</style>



<div class="container" style="margin-top: 20px">
    <div class="main-body">
        <div class="card">
            <div class="card-body">
                <h4 class="text-center">Danh sách sinh viên hp @Model.MaHP - @Model.tb_MonHoc.TenMH</h4>
                <h5 class="spec-1 text-center">Sỉ số: @Model.SiSo_HienTai/@Model.SiSo_ToiDa</h5>
            </div>
            <div class="card-header">
            </div>

            <div class="card-body">
                <h5 class="d-flex align-items-center mb-3"><b></b></h5>
                <div class="container mt-3 mb-5">
                    <div class="d-flex justify-content-center row">
                        <div class="col-md-9">
                            @{
                                foreach (var item in Model.tb_DiemHocPhan)
                                {
                                    <div class="row p-2 bg-white border rounded">
                                        <div class="col-md-3 mt-1">
                                            @{
                                                if (item.tb_SinhVien.GioiTinh == General.gioiTinhNam)
                                                {
                                                    <img class="img-fluid img-responsive rounded product-image" src="~/assets/imgs/student_male.jpg">
                                                }
                                                else
                                                {
                                                    <img class="img-fluid img-responsive rounded product-image" src="~/assets/imgs/student_female.jpg">
                                                }
                                            }
                                        </div>
                                        <div class="col-md-7 mt-1">
                                            <h5>@item.tb_SinhVien.MaSV - @item.tb_SinhVien.HoTen</h5>
                                            <h6>Ngày sinh: @General.getStrFormatDate(item.tb_SinhVien.NgaySinh)</h6>
                                            <h6>SĐT: @item.tb_SinhVien.SDT</h6>
                                            <h6>Email: @item.tb_SinhVien.Email</h6>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}


